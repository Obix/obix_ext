type one_shot_timer

	attribute command_object type:command_object end

	attribute delay_in_milliseconds type:positive32 end

	command start
		in_check
			script
				check not i_object_.co_is_running
			end
		end
	end

	command cancel
		in_check
			script
				check i_object_.co_is_running
			end
		end
	end

	command is_running
		out result type:yes_no end
	end

end type
